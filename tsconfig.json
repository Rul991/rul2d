{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["ES2017", "DOM"],
        "noEmitOnError": true,
        "declaration": true,
        "declarationDir": "./dist/types",
        "noEmit": false,
        "preserveConstEnums": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "./dist"]
}