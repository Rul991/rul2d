{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["ES2017", "DOM"],
        "noEmitOnError": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./dist/types",
        "noEmit": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}